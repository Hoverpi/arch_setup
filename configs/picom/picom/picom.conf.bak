# Configuración mínima de picom para bordes redondeados

# Activa la composición
backend = "glx";

# Desactiva efectos visuales adicionales
shadow = false;
fading = false;
vsync = false;
blur-background = false;

# Configura el radio de redondeo (en píxeles)
corner-radius = 20;

# Redondeo sólo para ventanas normales
rounded-corners-exclude = [
    "class_g = 'Polybar'",
    "class_g = 'Dunst'",
    "class_g = 'Notify-osd'",
    "class_g = 'Plank'",
    "class_g = 'Cairo-dock'",
    "class_g = 'Xfce4-notifyd'",
    "class_g = 'Xfce4-power-manager'"
];

# Opciones adicionales
inactive-opacity = 1.0;
active-opacity = 1.0;
